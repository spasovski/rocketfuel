@import 'lib';

#filter_preview {
    border: 1px solid $earl-gray;
    width: 320px;
}

.page {
    overflow: hidden;
}

.collection {
    &.overview {
        border: 1px solid $seavan-salt-white;
        border-radius: 5px;
        margin: 0 10px 10px;
        padding: 10px;
        padding-right: 42px;  // 32 + 5 + 5
        position: relative;

        .public {
            background: url(../img/eye.svg) no-repeat;
            background-size: 32px 32px;
            height: 32px;
            position: absolute;
            right: 5px;
            top: 5px;
            width: 32px;
        }
    }

    .labels {
        font-size: 0.85em;
    }

    .thumbs {
        padding: 10px 0 0;

        &:empty {
            display: none;
        }
    }
}

a.new_collection, a.add_app {
    color: $note-gray;
    display: block;
    padding: 10px;

    b {
        color: $sailor-blue
        display: block;
        float: left;
        font-size: 1.5em;
        line-height: 20px;
        margin-right: 5px;
    }
}

#app_search form {
    button {
        float: right;
        padding-left: 0;
        padding-right: 0;
        width: 20%;
    }
    input[type=search] {
        line-height: 32px;
        padding: 0 6px;
        width: 79%;
    }
}

#app_search_results {
    border: 1px solid $seavan-salt-white;
    border-radius: 4px;
    height: calc(unquote('100% - 90px'));
    margin: 10px 0 0;
    overflow: auto;
    padding: 10px;
}

.app {
    background: #fff;
    border: 1px solid $seavan-salt-white;
    border-bottom-width: 2px;
    border-radius: 4px;
    margin-bottom: 5px;
    padding: 5px 5px 5px 55px;
    position: relative;

    img {
        display: block;
        float: left;
        margin-left: -43px;
    }
    p {
        color: black;
        text-decoration: none;
    }

    .delete {
        color: black;
        display: none;
        font-size: 20px;
        position: absolute;
        right: 5px;
        top: 0;

        &:hover {
            color: red;
        }
    }

    .handle {
        background: $salt-flat-white;
        bottom: 2px;
        border: 1px solid $seavan-salt-white;
        border-bottom-width: 2px;
        border-radius: 4px;
        cursor: ns-resize;
        display: none;
        position: absolute;
        right: 2px;

        &:hover {
            background: $seavan-salt-white;
            border-color: $cloud-gray;
        }
    }

    &:hover .delete,
    &:hover .handle {
        display: block;
    }

    .incompatible {
        border: 2px solid $angry-cvan-red;
        border-radius: 4px;
        box-shadow: 0 0 6px #f55;
        margin: 4px 0 2px;
        padding: 3px 6px;
    }
}

a.app {
    display: block;
}

.sortable-placeholder {
    background: $salt-flat-white;
    height: 50px;
    margin-bottom: 5px;
}

ul.apps {
    margin: 0;
    list-style: none;
    padding: 0;
}

a.delete_collection {
    color: #b00;
}

.toggle-flag {
    color: $disabled-brown;
    outline: none;
    &.offstate {
        color: green;
    }
    &.saving {
        pointer-events: none;
        b {
            display: inline-block;
            animation(unquote('0.9s spin infinite steps(30)'));
        }
    }
}

.curators {
    .sorry {
        color: $earl-gray;
        margin-bottom: 1em;
    }
    ul {
        list-style: none;
        margin: 1em 0;
        padding: 0;

        li {
            border: 1px solid $earl-gray;
            border-radius: 5px;
            margin-bottom: 5px;
            padding: 10px;
            position: relative;

            .delete {
                color: red;
                cursor: pointer;
                display: none;
                position: absolute;
                right: 5px;
                top: 0;
            }
            &:hover .delete {
                display: block;
            }
        }
    }
}
